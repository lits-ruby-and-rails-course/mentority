					</div>
				</div>

				<!-- /.signup form -->
				<div class="col-md-5">

					<div class="signup-header wow fadeInUp">
						<h3 class="form-title text-center">GET STARTED</h3>
						<%= form_for(User.new, as: 'user', url: user_session_path, html: { class: 'form-header', method: :post }) do |f| %>
							<div class="form-group">
								<%= f.email_field :email, autofocus: true, class: 'form-control input-lg', placeholder: 'Email address', required: true %>
							</div>
							<div class="form-group">
								<%= f.password_field :password, autocomplete: "off" , class: 'form-control input-lg' , required: true %>
							</div>
							<div class="form-group last">
								<%= f.submit "Login", class: 'btn btn-warning btn-block btn-lg' %>
							</div>
							<p class="privacy text-center">We will not share your email. Read our <a href="privacy.html">privacy policy</a>.</p>
						<% end %>
					</div>

				</div>
			</div>
		</div>
	</div>
</div>

